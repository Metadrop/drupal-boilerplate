{
    "name": "metadrop/drupal-boilerplate",
    "description": "Project template for Drupal 9 projects with a relocated document root",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/metadrop/behat-contexts"
        },
        {
            "type": "vcs",
            "url": "https://github.com/metadrop/drupal-behat"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.7",
        "cweagans/composer-patches": "^1.7",
        "drupal-composer/drupal-security-advisories": "8.x-dev",
        "drupal/admin_toolbar": "^2.4",
        "drupal/config_split": "^1.7",
        "drupal/core-composer-scaffold": "^9",
        "drupal/core-recommended": "^9.1",
        "drupal/environment_indicator": "^4.0",
        "drupal/eu_cookie_compliance": "^1.13",
        "drupal/honeypot": "^2.0",
        "drupal/metatag": "^1.14",
        "drupal/paragraphs": "^1.12",
        "drupal/pathauto": "^1.8",
        "drupal/rabbit_hole": "^1.0@beta",
        "drupal/radix": "^4.10",
        "drupal/redirect": "^1.6",
        "drupal/simple_sitemap": "^3.8",
        "drupal/stage_file_proxy": "^1.1",
        "drupal/styleguide": "^2.0@beta",
        "drupal/ultimate_cron": "^2.0@alpha",
        "drupal/webform": "^6.0@alpha",
        "drush/drush": "^10.3"
    },
    "require-dev": {
        "bex/behat-step-time-logger": "^2.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "drupal/core-dev": "^9.1",
        "drupal/devel": "^4.0",
        "edgedesign/phpqa": "^1.23",
        "jcalderonzumba/gastonjs": "^1.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.3",
        "metadrop/behat-contexts": "dev-fb-nuvoleweb-dev-i45-behat-4.x",
        "metadrop/grumphp-drupal-check": "^0.3.0",
        "metadrop/scripthor": "1.x-dev",
        "mglaman/drupal-check": "^1.1.8",
        "mikey179/vfsstream": "^1.6",
        "pdepend/pdepend": "^2.8",
        "phpmd/phpmd": "^2.9",
        "phpro/grumphp": "^1.3.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "discard-changes": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "./web"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "composer-exit-on-patch-failure": true,
        "enable-patching": true
    }
}
